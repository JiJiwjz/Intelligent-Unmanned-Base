<?xml version="1.0"?>
<launch>
    <arg name="debug"   default="false"/>
    <!--底盘驱动(chassis driver)-->
    <include file="$(find controller)/launch/controller.launch"/>
    <include file="$(find peripherals)/launch/depth_cam.launch"/>
    <node pkg="example" type="prevent_falling_node.py" name="prevent_falling" output="screen">
        <param name="debug" value="$(arg debug)"/>
        <rosparam file="$(find example)/config/plane_distance.yaml"   command="load"/>
    </node>
</launch>
